<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:orientation="horizontal">

    <Button
        android:id="@+id/btnPrevEpisodio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/colorPrimary"
        android:drawableTop="@drawable/baseline_arrow_back_24"
        android:text="@string/navigation_prev_episodio"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btnMarcarVisto"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/colorPrimary"
        android:drawableTop="@drawable/baseline_remove_red_eye_24"
        android:text="@string/navigation_marcar_visto"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btnNextEpisodio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/colorPrimary"
        android:drawableTop="@drawable/baseline_arrow_forward_24"
        android:text="@string/navigation_next_episodio"
        android:textColor="@color/white" />

</LinearLayout>
